<h1 class="heading">Create A Rocks or Flops Account</h1><br>

<div class="col-sm-12 text-center">  <!-- align text center -->
  <div class="bgbox">
    <form method="POST" action="/signup">
        <label>First Name</label><br/><input type="text" name="fname" placeholder=""><br><br>
        <label>Last Name</label><br/><input name="lname" placeholder=""><br><br>
        <label>Location</label><br/><input type="user_location" name="user_location" placeholder="Location"><br><br>
        <label>Favorite Genre</label><br><input type="text" name="fav_genre" placeholder="Genre"><br><br>
        <label>Favorite Artist 1</label><br><input type="text" name="fav_artist1" placeholder="Artist 1"><br><br>
        <label>Favorite Artist 2</label><br><input type="text" name="fav_artist2" placeholder="Artist 2"><br><br>
        <label>Favorite Artist 3</label><br><input type="text" name="fav_artist3" placeholder="Artist 3"><br><br>
        <label>E-mail</label><br/><input type="email" name="email"><br><br>
        <label>Username</label><br/><input name="username"><br><br>
        <label>Password</label><br/><input type="password" name="password"><br><br>
        <input class="btn btn-success" type="submit" value="Create">
    </form>
  </div><br>
</div>
